{% if section.settings.footer_enable %}
    <footer id="section-{{ section.id }} class="footer axil-footer-area footer-style-2">
        {% include 'footer-top' %}
        {% include 'footer-bottom' %}
    </footer> 
{% endif %}
    
    {% schema %}
      {
        "name": "Footer",
        "settings": [
            {
              "type": "checkbox",
              "id": "footer_enable",
              "label": "Footer Enable",
              "default": true
            },
            {
                "type": "radio",
                "id": "footer_style",
                "label": "Footer Style",
                "options":[
                  {
                      "value":"footer_style_1",
                      "label": "Style 1"
                  },
                  {
                      "value":"footer_style_2",
                      "label": "Style 2"
                  },
                  {
                      "value":"footer_style_3",
                      "label": "Style 3"
                  },
                  {
                      "value":"footer_style_4",
                      "label": "Style 4"
                  },
                  {
                      "value":"footer_style_5",
                      "label": "Style 5"
                  },
                  {
                      "value":"footer_style_6",
                      "label": "Style 6"
                  }
                ],
    
               "default": "footer_style_1"
            },
            {
              "type": "header",
              "content": "Footer Top"
            },
            {
              "type": "checkbox",
              "id": "footer_top_enable",
              "label": "Footer Top Enable",
              "default": true,
            },
             
            {
              "type": "header",
              "content": "Contact Information"
            },
            
            {
              "type": "header",
              "content": "Support"
            }, 
                {
                    "type": "text",
                    "id": "support_title",
                    "label": "Title",
                    "default": "Sypport", 
                },
                {
                    "type": "text",
                    "id": "contact_address",
                    "label": "Address",
                    "default": "685 Market Street, Las Vegas, LA 95820, United States."
                },
                {
                    "type": "text",
                    "id": "contact_email",
                    "label": "Email",
                    "default": "example@domain.com"
                },  
                {
                    "type": "text",
                    "id": "contact_ph_nubmer",
                    "label": "Phone Number",
                    "default": "(+612) 2531 5600"
                },
 
        ]
      }
    {% endschema %}
 