<div class="axil-shop-area axil-section-gap bg-color-white">
  <div class="container">
    <div class="row">
      {% paginate collections['all'].products by 6 %}
        {% if section.settings.shop_layout == "full" %}
          {% render 'shop-full-width' %}
        {% else %}
          {% if section.settings.shop_layout == "left" %}
            {% render 'shop-sidebar' %}
          {% endif %}
          {% render 'shop-with-sidebar' %}
          {% if section.settings.shop_layout == "right" %}
            {% render 'shop-sidebar' %}
          {% endif %}
        {% endif %}

      {% endpaginate %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Shop",
    "settings": [
      {
        "type": "select",
        "id": "shop_layout",
        "label": "Shop Layout",
        "options": [
          {
            "label": "Left Sidebar",
            "value": "left"
          }, {
            "label": "Right Sidebar",
            "value": "right"
          }, {
            "label": "No Sidebar",
            "value": "full"
          }
        ]
      }
    ]
  }
{% endschema %}