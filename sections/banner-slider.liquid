<div class="axil-main-slider-area main-slider-style-1">
  <div class="container">
      <div class="row align-items-center">
          <div class="col-lg-5 col-sm-6">
              <div class="main-slider-content">
                  <div class="slider-content-activation-one">
                    {% for block in section.blocks %}  
                    {% case block.type %}
                    {% when 'banner' %}

                    <div class="single-slide slick-slide" data-sal="slide-up" data-sal-delay="400" data-sal-duration="800"> 
                         
                        {% if block.settings.subtitle != '' %}
                            <span class="subtitle"><i class="fas fa-fire"></i> {{ block.settings.subtitle }}</span>
                        {% endif %} 

                        {% if block.settings.banner_title != '' %}
                            <h1 class="title">{{ block.settings.banner_title }}</h1>
                        {% endif %} 

                        {% if block.settings.banner_btn_url %} 
                            <div class="slide-action">
                              <div class="shop-btn">
                                <a href="{{ block.settings.banner_btn_url }}" class="axil-btn btn-bg-primary"><i class="far fa-shopping-cart"></i> {{ block.settings.banner_btn_txt }}</a>
                              </div>  
                            </div>  
                        {% endif %}  

                      </div>

                    {% endcase %} 
                  {% endfor %}
                      
                      
                  </div>
              </div>
          </div>
          <div class="col-lg-7 col-sm-6">
              <div class="main-slider-large-thumb">
                  <div class="slider-thumb-activation-one axil-slick-dots">
                    {% for block in section.blocks %}  
                    {% case block.type %}
                    {% when 'banner' %}
                    <div class="single-slide slick-slide" data-sal="slide-up" data-sal-delay="600" data-sal-duration="1500">
                           
                          <img src="{% if block.settings.banner_img %}{{ block.settings.banner_img | img_url: '672x541' }}{% else %}http:\/\/via.placeholder.com\/672x541{% endif %}" alt="{{ block.settings.banner_img.alt }}"> 
                       
                          <div class="product-price">
                            {% if block.settings.price_label != '' %}
                              <span class="text">{{ block.settings.price_label }}</span>
                          {% endif %}  
                            {% if block.settings.price != '' %}
                              <span class="price-amount">{{ block.settings.price }}</span>
                            {% endif %} 
                          </div>

                      </div>
                    {% endcase %} 
                  {% endfor %}
                  </div>
              </div>
          </div>
      </div>
  </div>
  <ul class="shape-group">
      <li class="shape-1"><img src="{{ "shape-1.png" | asset_url }}" alt="Shape"></li>
      <li class="shape-2"><img src="{{ "shape-2.png" | asset_url }}" alt="Shape"></li>
  </ul>
</div>


{% schema %}
{
    "name": "Banner Slider",
    "settings": [
          {
            "type": "header",
            "content": "Banner Layout"
           
          },
          {
              "type": "radio",
              "id": "banner_style",
              "label": "Banner Layout",
              "options":[
                {
                    "value":"banner_style_1",
                    "label": "Style 1"
                },
                {
                    "value":"banner_style_2",
                    "label": "Style 2"
                },
                {
                    "value":"banner_style_3",
                    "label": "Style 3"
                }
               
              ],
             "default": "banner_style_1"
          }
    ],


    "blocks": [
      {
        "type": "banner",
        "name": {
          "en": "Banner Block"
        },
        "settings": [
          {
            "type": "text",
            "id": "subtitle",
            "label": {
              "en": "Slider Sub Title"
            },
            "default": {
              "en": " Hot Deal In This Week"
            }
          },
          {
            "type": "text",
            "id": "banner_title",
            "label": {
              "en": "Title"
            },
            "default": {
              "en": "Smart Digital Watch"
            }
          },
          {
            "type": "text",
            "id": "banner_btn_txt",
            "label": "Button Text",
            "default": "Shop Now"
            
          },
          {
            "type": "url",
            "id": "banner_btn_url",
            "label": "URL"
          },
          {
            "type": "image_picker",
            "id": "banner_img",
            "label": "Banner Image"
          },
          {
            "type": "text",
            "id": "price_label",
            "label": {
              "en": "Price Label"
            },
            "default": {
              "en": " From"
            }
          },
          {
            "type": "text",
            "id": "price",
            "label": {
              "en": "Price"
            },
            "default": {
              "en": "$49.00"
            }
          }
          
        ]
      }
    ],
    "presets": [
      {
        "category": "banner",
        "name": "Banner Slider"
    }]
}
{% endschema %}
 