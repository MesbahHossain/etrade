          "default": 4
        },
        {
          "type": "select",
          "id": "pos_y_type",
          "label": "Horizontal Position",
          "default": "top",
          "options": [
            {
              "value": "top",
              "label": "Top"
            },
            {
              "value": "bottom",
              "label": "Bottom"
            }
          ]
        },
        {
          "type": "range",
          "id": "pos_y",
          "min": 0,
          "max": 400,
          "step": 4,
          "label": "Spacing",
          "unit": "px",
