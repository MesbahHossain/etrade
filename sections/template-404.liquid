<div class="container">
  <div class="row align-items-center">
    <div class="col-lg-6">
      <div class="content">
        <span class="title-highlighter highlighter-secondary">
          <i class="fal fa-exclamation-circle"></i>
          {{ section.settings.title }}</span>
        <h1 class="title">{{ section.settings.subtext_title }}</h1>
        {{ section.settings.short_details }}

        {% if section.settings.button_url == blank %}
          {% assign shop_url = shop.secure_url %}
        {% else %}
          {% assign shop_url = section.settings.button_url %}
        {% endif %}

        <a href="{{ shop_url }}" class="axil-btn btn-bg-secondary right-icon">{{ section.settings.button_label }}
          <i class="fal fa-long-arrow-right"></i>
        </a>

      </div>
    </div>
    <div class="col-lg-6">
      {%- if section.settings.img_404 -%}
        <div class="thumbnail">
          <img src="{{ section.settings.img_404 | img_url: 'large' }}" alt="{{ section.settings.img_404.alt | default: shop.name }}">
        </div>
      {%- endif -%}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Template 404",
    "tag": "section",
    "class": "error-page onepage-screen-area",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "default": "404",
        "label": "Oops! Somthings missing."
      },
      {
        "type": "text",
        "id": "subtext_title",
        "default": "Page not Found",
        "label": "404 Subtext Title"
      },
      {
        "type": "richtext",
        "id": "short_details",
        "label": "Short Details",
        "default": "<p>It seems like we dont find what you searched. The page you were looking for doesn't exist, isn't available loading incorrectly.</p>"
      },
      {
        "type": "image_picker",
        "id": "img_404",
        "label": "404 Image"

      }, {
        "type": "text",
        "id": "button_label",
        "default": "Back to homepage",
        "label": "Button Label"
      }, {
        "type": "url",
        "id": "button_url",
        "label": "Button URL"
      }
    ]
  }
{% endschema %}