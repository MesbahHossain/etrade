{% schema %}
{
    "name": "Section Best Deals",
    "settings": [
        {
            "type": "header",
            "content": "Section Title"
          },  
          
        {
            "type": "text",
            "id": "section_title",
            "default": "Life is More Than Sunglasses and Hit Movies. ",
            "label": "Title"
        },
        {
            "type": "text",
            "id": "section_btn_txt",
            "label": "Button Text",
            "default": "View All Deals" 
          },
          {
            "type": "url",
            "id": "section_btn_url",
            "label": "URL"
          }


    ],

    "blocks": [
      {
        "type": "deals",
        "name": "Deals Block",
        "settings": [
          {
          "type": "product",
          "id": "popup_product",
          "label": "Product-Handle"
          },  
          {
            "type": "checkbox",
            "id": "plus_icon_active",
            "label": "Plus Icon Active",
            "default": false
          },
          {
            "type": "select",
            "id": "pos_x_type",
            "label": "Horizontal Position",
            "default": "left",
            "options": [
              {
                "value": "left",
                "label": "Left"
              },
              {
                "value": "right",
                "label": "Right"
              }
            ]
          },
          {
            "type": "range",
            "id": "pos_x",
            "min": 0,
            "max": 400,
            "step": 4,
            "label": "Spacing",
            "unit": "px",
            "default": 4
          },
          {
            "type": "select",
            "id": "pos_y_type",
            "label": "Horizontal Position",
            "default": "top",
            "options": [
              {
                "value": "top",
                "label": "Top"
              },
              {
                "value": "bottom",
                "label": "Bottom"
              }
            ]
          },

          {
            "type": "range",
            "id": "pos_y",
            "min": 0,
            "max": 400,
            "step": 4,
            "label": "Spacing",
            "unit": "px",
            "default": 4
          }


          
        ]
      }
    ],

        "presets": [
          { 
            "name": "Best Deals"
        }]
}
{% endschema %}
 