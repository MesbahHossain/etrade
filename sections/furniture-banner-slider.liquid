  <!-- Start Slider Area -->
  <div class="axil-main-slider-area main-slider-style-5">
    <div class="container">
        <div class="slider-box-wrap">
            <div class="slider-activation-two axil-slick-dots">
              {% for block in section.blocks %}  
              {% case block.type %}
                {% when 'banner' %}
                  
                <div class="single-slide slick-slide">
                    <div class="main-slider-content">
                        {% if block.settings.subtitle != '' %}
                          <span class="subtitle"><i class="fas fa-fire"></i> {{ block.settings.subtitle }}</span>
                        {% endif %} 
                        {% if block.settings.banner_title != '' %}
                          <h1 class="title">{{ block.settings.banner_title }}</h1>
                        {% endif %}  
                        {% if block.settings.banner_btn_url %}  
                          <div class="shop-btn">
                            <a href="{{ block.settings.banner_btn_url }}" class="axil-btn btn-bg-primary"><i class="far fa-shopping-cart"></i> {{ block.settings.banner_btn_txt }}</a>
                          </div>   
                        {% endif %}   
                    </div>

                    <div class="main-slider-thumb">
                      <img src="{% if block.settings.banner_img %}{{ block.settings.banner_img | img_url: '530x460' }}{% else %}http:\/\/via.placeholder.com\/530x460{% endif %}" alt="{{ block.settings.banner_img.alt }}"> 
                    </div>

                </div>
              {% endcase %} 
            {% endfor %}
            </div>
        </div>
    </div>
</div>
 

{% schema %}
{
    "name": "Furniture Banner",
    "settings": [
          {
            "type": "header",
            "content": "Banner Layout"
           
          }
    ],
    "blocks": [
      {
        "type": "banner",
        "name": {
          "en": "Banner Block"
        },
        "settings": [
          {
            "type": "text",
            "id": "subtitle",
            "label": {
              "en": "Slider Sub Title"
            },
            "default": {
              "en": " Hot Deal In This Week"
            }
          },
          {
            "type": "text",
            "id": "banner_title",
            "label": {
              "en": "Title"
            },
            "default": {
              "en": "Smart Digital Watch"
            }
          },
          {
            "type": "text",
            "id": "banner_btn_txt",
            "label": "Button Text",
            "default": "Shop Now"
            
          },
          {
            "type": "url",
            "id": "banner_btn_url",
            "label": "URL"
          },
          {
            "type": "image_picker",
            "id": "banner_img",
            "label": "Banner Image"
          }
        ]
      }
    ],
    "presets": [
      {
        "category": "banner",
        "name": "Furniture Banner"
    }]
}
{% endschema %}
 
