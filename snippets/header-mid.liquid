<div class="axil-header-top">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-sm-6">
                <div class="header-top-dropdown">  
                    {% if section.settings.header_languages_enable %} 
                        {% include 'languages' %}
                    {% endif %}
                    {% if section.settings.header_currency_enable %} 
                        {% include 'currency' %}
                    {% endif %}
                </div>
            </div>
            <div class="col-sm-6">
                <div class="header-top-link">
                    <ul class="quick-link"> 
                

                    {% for link in linklists[header_top_menu_handle].links %}
                    
                            <li>
                                <a href="{{ link.url }}" {% if link.active %}aria-current="page"{% endif %}>
                                {{ link.title }}</a>
                            </li>  
                        {%- endfor -%} 
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>